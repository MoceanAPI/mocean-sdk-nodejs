{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-expressions": "warn",
    "no-restricted-syntax": "off",
    "global-require": "off",
    "class-methods-use-this": "off",
    "no-new": "warn"
  }
}
